    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.SplashScreen">

        <LinearLayout
            android:id="@+id/customlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Custom Amount"
                android:textColor="?colorPrimary" />

            <EditText
                android:id="@+id/customentrytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:inputType="number" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/razorPay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12.0dip"
            app:cardElevation="8.0dip"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_3"
                android:orientation="vertical"
                android:padding="24.0dip">

                <TextView
                    fontPath="@string/sans_bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="12.0dip"
                    android:text="RazorPay"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#fff"
                    android:textSize="23sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/PayUMoney"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12.0dip"
            app:cardElevation="8.0dip"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_8"
                android:orientation="vertical"
                android:padding="24.0dip">

                <TextView
                    fontPath="@string/sans_bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="12.0dip"
                    android:text="PayUMoney"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#fff"
                    android:textSize="23sp" />

